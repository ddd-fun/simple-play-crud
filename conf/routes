# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)


GET         /adverts              controllers.Application.getAllAdverts
GET         /adverts/:guid        controllers.Application.getAdvert(guid: String)
POST        /adverts              controllers.Application.addAdvert
PUT         /adverts/:guid        controllers.Application.updateAdvert(guid: String)
DELETE      /adverts/:guid        controllers.Application.deleteAdvert(guid: String)